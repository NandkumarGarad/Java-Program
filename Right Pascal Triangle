
import java.util.Scanner;
class RightPascalTriangle 
{
	public static void main(String[] args) 
	{	
		Scanner sc = new Scanner(System.in);

		System.out.print("Enter the Number : ");
		int N = sc.nextInt();
		
		for (int i=0 ; i<N ; i++ )
		{
			for (int j=0 ; j<=i ; j++ )
			{
				System.out.print("*"+" ");
			}
			System.out.println();
		}
		for (int i=0 ; i<N ; i++ )
		{
			for (int j=0 ;j<N-i-1 ; j++ )
			{
				System.out.print("*"+" ");
			}
			System.out.println();
		}
	}
}
